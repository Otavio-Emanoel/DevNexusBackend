            <div class="header-nav-logo">
                <img src="images/DevNexus.png">
            </div>
            <div class="header-nav-links">
                <nav>
                    <a href="/" class="link-page">
                        Inicio
                    </a>
                    <a href="/sobre" class="link-page">
                        Sobre
                    </a>
                    <a href="" class="link-page">
                        Filtrar
                    </a>
                    <a id="search-button" href="">
                        <i class="fa fa-search" aria-hidden="true"></i>
                    </a>

                    <% if(loggedUser ) { %>
                        <div class="header-logged" title="Visualizar perfil">
                            <a href="/perfil">
                                <p title="Visualizar perfil">
                                    <% const primeiraPalavra=(str)=> str.trim().split(' ')[0] || ""; %>
                                        <%= primeiraPalavra(loggedUser.name) %>
                                </p>
                                <img title="Visualizar perfil" src="<%= loggedUser.photoUrl %>" onerror="this.src = 'images/DevNexus.png'" >

                            </a>
                        </div>

                        <% } else { %>

                            <a href="/login">
                                <button style="color: white; cursor: pointer;">
                                    Conectar
