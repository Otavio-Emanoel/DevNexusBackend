            </div>
        </div>
        <div class="header-news">
            <h1>
                Conheça ou contrate <br> programadores de todo o Brasil!
            </h1>
            <% if(loggedUser ) { %>
                <% const primeiraPalavra=(str)=> str.trim().split(' ')[0] || ""; %>
                                        
                <h2 class="welcomeuser">
                    Seja bem vindo <%= primeiraPalavra(loggedUser.name) %>!
                </h2>

            <% } else { %>
                    <div>
                        <a href="/register">
                            <button id="register-button">
                                Cadastre-se
                            </button>
                        </a>
                        <a href="/sobre">
                            <button id="knowmore-button">
                                Saiba Mais
                            </button>
                        </a>
                    </div>
            <% } %>
        </div>
    </header>
    <main class="app">
        <% users.forEach(user=> { %>
            <div class="card hidden">
                <img class="programmer" title="<%= user.about %>" src="<%= user.photoUrl %>" onerror="this.src = 'images/DevNexus.png'">
                <div class="card-info">
                    <p>
                        <%= user.name %>
                    </p>
                    <p>
                        <%= user.area %>
                    </p>
                    <p>
                        <%
                        const calcularIdade = (birthDate) => {
                            const hoje = new Date();
                            const nascimento = new Date(birthDate);
                
                            let idade = hoje.getFullYear() - nascimento.getFullYear();
                
                            // Verifica se a pessoa ainda não fez aniversário este ano
                            const aniversarioNaoPassou = hoje.getMonth() < nascimento.getMonth() || (hoje.getMonth() === nascimento.getMonth() && hoje.getDate() < nascimento.getDate());
                            if (aniversarioNaoPassou) {
                                idade--;
                            }
                            return idade;
                        };
                        %>
                        <%= calcularIdade(user.birthDate) %> anos
                    </p>
                    <p style="font-size: .9rem;"><a style="text-decoration: none; color: #9fdcff;"
                            href="<%= user.github %>">
                            <%= user.github %>
                        </a> </p>
                </div>
                <div class="card-habilidade">
                    <div class="card-lenguages-logo">
                        <% if(user.skills && Array.isArray(user.skills)) { %>
                            <% user.skills.forEach(skill=> { %>
                                <% if(skill) { %>
                                <% const skillLower=skill.toLowerCase() %>
                                    <% if(skillIcons[skillLower]) { %>
                                        <img src="/images/skills/<%= skillIcons[skillLower] %>" loading="lazy" title="<%= skill %>">
                                    <% } %>
                                <% } %>
                            <% }) %>
                        <% } %>
                    </div>
                    <button class="card-conheca">Conheça</button>
                </div>
            </div>
            <% }); %>

    </main>
